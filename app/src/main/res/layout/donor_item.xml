<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#fff" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardImage"
                app:cardCornerRadius="10dp"
                android:layout_margin="4dp"
                android:layout_width="200dp"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/image"
                    android:scaleType="fitXY"
                    android:src="@drawable/logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_background"/>

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/message"
                android:padding="8dp"
                android:layout_toEndOf="@+id/cardImage"
                android:layout_alignTop="@+id/cardImage"
                android:layout_alignBottom="@+id/cardImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0E0000"
                android:textSize="14sp"
                android:text="Abdullah jan Sanga Yi"/>
            <View
                android:id="@+id/line"
                android:layout_marginBottom="5dp"
                android:background="#020000"
                android:layout_below="@+id/cardImage"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/call_btn"
                android:layout_width="30dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:src="@drawable/ic_phone_in_talk_black_24dp"
                android:layout_below="@+id/line"
                android:layout_height="30dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>