<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage"
            app:cardCornerRadius="10dp"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Do'nt Worry You Will Get Help"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:textColor="#ED0212"
            android:padding="20dp"
            />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Choose City"
            android:textColor="#200000"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="36sp"/>
    <EditText
        android:id="@+id/et_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="eg: Colombo"
        android:paddingStart="20dp"
        android:textColorHint="#200000"
        android:textSize="24sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Blood Group"
            android:textColor="#200000"
            android:textSize="36sp"/>
        <EditText
            android:id="@+id/et_blood_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="eg: A+"
            android:paddingStart="20dp"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:padding="5dp"
            android:layout_marginTop="50dp"
            android:text="Find Donors "
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="#F8F1F4"
            android:background="@drawable/button_bg"
            android:textColorHint="#FFC107"/>





    </LinearLayout>
</ScrollView >
